# Docker-specific environment configuration for Aparavi MCP Server
# Copy this file to .env for Docker deployments

# APARAVI API Configuration
APARAVI_HOST=host.docker.internal
APARAVI_PORT=80
APARAVI_USERNAME=root
APARAVI_PASSWORD=root
APARAVI_TIMEOUT=30
APARAVI_MAX_RETRIES=3

# MCP Server Configuration
MCP_SERVER_NAME=aparavi-mcp-server-docker
MCP_SERVER_VERSION=0.1.0
LOG_LEVEL=INFO
CACHE_ENABLED=true
CACHE_TTL=300

# Docker-specific settings
MCP_HTTP_PORT=8080
MCP_SERVER_MODE=local
